@using CarFuel.Models
@model IEnumerable<Car>
@{
    ViewBag.Title = "Cars";
}

<h2>Cars</h2>
<br/>
<a href="~/Cars/Add" class="btn btn-danger btn-sm">Add new car</a>
<br />
<br />
@foreach(var c in Model) {
    <div>
        @c.Make / @c.Model
       (@c.AverageConsumptionRate Km/L.)
    </div>

}
<br/>
Total = @Model.Count() cars.

